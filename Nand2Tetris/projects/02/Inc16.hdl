/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
   // Put you code here:
   // Only add 1 once, in the beginning. 
   // Can represent 0 = false and 1 = true
   Add16(a=in, b[0]=true, out=out);
}